<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.neusoft.loveread.manager.mapper.TbItemMapper">
    <resultMap id="BaseResultMap" type="cn.neusoft.loveread.pojo.TbItem">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="sell_point" property="sellPoint" jdbcType="VARCHAR"/>
        <result column="price" property="price" jdbcType="BIGINT"/>
        <result column="num" property="num" jdbcType="INTEGER"/>
        <result column="barcode" property="barcode" jdbcType="VARCHAR"/>
        <result column="image" property="image" jdbcType="VARCHAR"/>
        <result column="cid" property="cid" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
    </resultMap>
    <update id="update">
        UPDATE tb_item
        SET title = #{title},
        sell_point = #{sellPoint},
        price = #{price},
        num = #{num},
        barcode = #{barcode},
        image = #{image},
        cid = #{cid},
        updated = #{updated}
        WHERE id = #{id,jdbcType=BIGINT}
    </update>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select *
        from tb_item
        where id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getItemList" resultMap="BaseResultMap">
        select *
        from tb_item
    </select>
    <insert id="insert" parameterType="cn.neusoft.loveread.pojo.TbItem">
        INSERT INTO tb_item
        (id, title, sell_point, price, num, barcode, image, cid, created, updated, userId)
        VALUES (#{id}, #{title}, #{sellPoint}, #{price}, #{num}, #{barcode}, #{image}, #{cid}, #{created}, #{updated}, #{userId})
    </insert>
    <delete id="delete" parameterType="cn.neusoft.loveread.pojo.TbItem">
        DELETE FROM tb_item WHERE id = #{id}
    </delete>
</mapper>